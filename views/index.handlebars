<h1>Eat Dat Burger</h1>

<h2>Burgers in Queue</h2>
{{#each data}}
{{#unless this.dataValues.devoured}}
<h3>{{this.dataValues.id}}. {{this.dataValues.burger_name}}</h3>
<form action="/{{this.dataValues.id}}?_method=PUT" method="POST">
	<input type="textarea" name="customer_name"></input>
	<button type="submit">Devour!</button>
</form>
{{/unless}}
{{/each}}

<h2>Burgers Devoured</h2>
{{#each data}}
{{#if this.dataValues.devoured}}
<h3>{{this.dataValues.id}}. {{this.dataValues.burger_name}}</h3>
<p>Customer is: {{this.dataValues.customer.dataValues.name}}</p>
{{/if}}
{{/each}}

<form action="/" method="POST">
	<input type="textarea" name="name"></input>
	<button>submit</button>
</form>